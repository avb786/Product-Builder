    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="centered">
            <h1><%= product.title %></h1>
            <hr>
            <div>
                <img height="100" width="100" src="<%= product.imageUrl %>" alt="product image" />
            </div>
            <h2><%= product.price %></h2>
            <h2><%= product.description %></h2>
            <form action="/cart" method="post">
                <button class="btn" type="submit">Add Cart</button>
                <input type="hidden" name="productId" id="<%= product.id %>">
            </form>
        </main>
        <%- include('../includes/end.ejs') %>